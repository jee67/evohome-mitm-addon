{
  "name": "Evohome CH MITM",
  "version": "1.2.0",
  "slug": "evohome_mitm",
  "description": "CH-setpoint begrenzing voor Evohome met MQTT-override, ramping en failsafe",
  "arch": ["amd64", "aarch64"],

  "startup": "services",
  "boot": "auto",
  "uart": true,
  "host_network": true,

  "devices": [
    "/dev/serial/by-id/usb-FTDI_FT232R_USB_UART_A50285BI-if00-port0"
  ],

  "options": {
    "controller_id": "01:033496",
    "otb_id": "10:061315",

    "idle_ch_raw": 20,
    "max_ch_raw": 90,

    "mqtt_host": "10.0.0.190",
    "mqtt_port": 1883,
    "mqtt_timeout_sec": 1800
  },

  "schema": {
    "controller_id": "str?",
    "otb_id": "str?",
    "idle_ch_raw": "int(0,30)",
    "max_ch_raw": "int(30,130)",

    "mqtt_host": "str",
    "mqtt_port": "int(1,65535)",
    "mqtt_timeout_sec": "int(300,7200)"
  }
}
